pipeline {
    agent any
    
        stage('Validate') {
            steps {
                echo 'Validating....'
		sh '/usr/share/maven/bin/mvn clean validate'
            }
        }
    stages {
        stage('Build') {
            steps {
                echo 'Building..'
		sh '/usr/share/maven/bin/mvn package'
            }
        }
        stage('test') {
            steps {
                echo 'Testing..'
		sh '/usr/share/maven/bin/mvn test'
            }
        }
        stage('delopy') {
            steps {
                echo 'Deploying....'
		sshagent(['Deploy_user']) {
		sh "scp -o StrictHostKeyChecking=no /var/lib/jenkins/workspace/jenkins-pipe/target/webapp-0.2.war centos@54.211.168.168:/home/centos/apache-tomcat-11.0.0-M1/webapps"
		 }
            }
        }
    }
}
